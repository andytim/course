<h2>course's list</h2>

<%= form_tag courses_path, method:"get" do%>
Name<%=text_field_tag :name%>
<p>Teacher<%=text_field_tag :teacher%></p>
<p>Time<%=text_field_tag :time%></p>
<p>Local<%=text_field_tag :local%></p>
<p>Credit<%=text_field_tag :credit%></p>
<%=submit_tag "search"%>
<%end%>

<% @courses.each do|course|%>
<%= link_to course.name, course_path(course) %>
<%= link_to "edit course", edit_course_path(course) %>
<%= link_to "delete course", course_path(course),method:"delete" %>
<%end%>